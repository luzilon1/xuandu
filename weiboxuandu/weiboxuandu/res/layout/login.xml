<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
 <TextView  
	android:paddingLeft="10dip"
	android:textSize="16dip"
	android:textColor="@color/black"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="用户昵称"
    />
<EditText
	android:id="@+id/user"
	android:layout_marginLeft="10dip"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:completionThreshold="1"
    android:singleLine="true"
    android:inputType="textEmailAddress"
    android:focusableInTouchMode="true"
    android:focusable="false"
    android:background="@color/blue" />


       
    <CheckBox android:layout_gravity="center_horizontal" android:layout_height="41dp" android:text="下次自动登录" android:id="@+id/auto_login" android:layout_width="wrap_content" android:gravity="center" android:textColor="@color/blue" android:checked="false"></CheckBox>
<Button  
    android:id="@+id/login_Button"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/regist_weibo"
    android:layout_width="180dip" 
    android:layout_height="50dip" 
    android:textColor="@color/white"
    android:text="登陆"
    />

<ListView android:id="@+id/listView" 
                android:layout_gravity="center_horizontal" 
                 android:layout_width="290dip" 
                 android:layout_height="wrap_content" 
                 android:drawSelectorOnTop="false" 
                 android:scrollingCache="false" 
                 android:cacheColorHint="#00000000" 
                 android:dividerHeight="1.0dip" android:fastScrollEnabled="false" />
</LinearLayout>
