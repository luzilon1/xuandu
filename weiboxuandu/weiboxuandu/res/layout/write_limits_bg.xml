<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_gravity="right"
  android:layout_height="wrap_content">
    <RelativeLayout android:layout_gravity="right" android:layout_height="wrap_content" android:layout_width="66dp">
        <ImageView android:src="@drawable/bg_delwords_nor" android:layout_alignParentRight="true"
          android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/imageView2"></ImageView>
        <ImageView android:layout_centerVertical="true" 
        android:layout_marginLeft="35dp"
         android:id="@+id/imageView1" 
         android:paddingRight="10dp"
         android:layout_alignParentRight="true"
         android:src="@drawable/icon_delwords" 
         android:layout_height="wrap_content" 
         android:layout_width="wrap_content"></ImageView>
        <TextView android:text="148" android:textColor="@color/black" 
        android:gravity="center_vertical" android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentTop="true" android:layout_alignLeft="@+id/imageView2"></TextView>
    </RelativeLayout>
    
</LinearLayout>
