<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
  <include android:id="@+id/title" layout="@layout/title_two_button_bg"/>
<LinearLayout android:orientation="vertical" android:background="#fff4f4f4" android:layout_width="fill_parent" android:layout_height="fill_parent">

<FrameLayout  android:layout_width="fill_parent" android:layout_height="wrap_content"> 
    
    <EditText android:gravity="top" android:hint="@string/tvuser" android:id="@+id/etCmtReason" android:textColor = "#ff8c00" 
    android:layout_height="280.0dip" android:text="" android:singleLine="false" android:layout_width="fill_parent"/>
   <LinearLayout 
   android:layout_width="wrap_content" android:layout_height="wrap_content"
   android:layout_gravity="bottom|right"
   android:paddingBottom="10dp" android:paddingRight="5dp"
   >
    <include layout="@layout/write_limits_bg" android:layout_gravity="bottom"></include>
    </LinearLayout>
   </FrameLayout> 
    <RelativeLayout  android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textColor="#ff000000" android:id="@+id/tvCmtLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5.0dip" android:layout_marginBottom="3.0dip"  android:layout_weight="1.0" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" />
        <CheckBox android:textColor="#ff000000" android:id="@+id/rb_forward" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/comment_add_forward" android:layout_below="@id/tvCmtLabel" android:layout_alignParentLeft="true" />
       <Button android:background="@drawable/attend_do"  android:id="@+id/bt_submit" android:text="提交评论" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/tvCmtLabel" android:layout_toRightOf="@id/rb_forward" android:layout_marginLeft="40dp"></Button>
     </RelativeLayout>
     <LinearLayout 
     android:layout_width="wrap_content"
     android:layout_height="fill_parent"
     android:layout_gravity="bottom"
     android:gravity="bottom"
     >
     <include android:id="@+id/tit_control" 
     layout="@layout/title_bottom_bg"
      android:layout_gravity="bottom"></include>
     </LinearLayout>
</LinearLayout>

</LinearLayout>  